{
  "name": "tiktok-shop-manager",
  "version": "1.0.0",
  "description": "AI-powered TikTok Shop seller tools - analytics, competitor tracking, trend detection, and price optimization",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "generate-icons": "node scripts/generate-icons.js",
    "generate-store-assets": "node scripts/generate-store-assets.js",
    "postbuild": "cp public/manifest.json dist/ && cp -r public/icons dist/ && mkdir -p dist/popup && echo '<!DOCTYPE html><html><head><meta charset=\"UTF-8\"><title>TikTok Shop Manager</title><script type=\"module\" src=\"../popup.js\"></script><link rel=\"stylesheet\" href=\"../popup.css\"></head><body><div id=\"root\"></div></body></html>' > dist/popup/index.html && rm -rf dist/src"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "sharp": "^0.33.1",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
